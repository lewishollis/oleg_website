<div class="relative flex min-h-screen w-full flex-col items-center justify-center p-4 sm:p-6 lg:p-8">
  <div class="w-full max-w-2xl">
    <!-- Page Heading -->
    <div class="mb-8 text-center">
      <h1 class="text-4xl font-black text-gray-900 dark:text-white leading-tight tracking-[-0.033em]">
        <%= @artwork.new_record? ? 'Upload New Artwork' : 'Edit Artwork' %>
      </h1>
      <p class="mt-2 text-base text-gray-600 dark:text-gray-400">
        <%= @artwork.new_record? ? 'Add a new piece to your portfolio by filling out the details below.' : 'Update the details of your artwork.' %>
      </p>
    </div>

    <!-- Form Container -->
    <%= form_with model: [:admin, @artwork], local: true, class: "rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900/50 shadow-sm p-6 sm:p-8 space-y-6" do |f| %>

      <!-- File Uploader -->
      <div class="flex flex-col">
        <div class="flex flex-col items-center gap-4 rounded-lg border-2 border-dashed border-gray-300 dark:border-gray-700 p-8 text-center">
          <div class="rounded-full bg-primary/10 p-3">
            <span class="material-symbols-outlined text-primary text-3xl">upload_file</span>
          </div>
          <div class="flex flex-col items-center gap-1">
            <p class="text-lg font-bold text-gray-900 dark:text-white">Artwork Image</p>
            <p class="text-sm text-gray-600 dark:text-gray-400">Upload your artwork image</p>
            <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">PNG, JPG, GIF up to 10MB</p>
          </div>

          <%= f.file_field :image,
              accept: "image/*",
              class: "mt-2 block w-full text-sm text-gray-900 dark:text-gray-200
                     file:mr-4 file:py-2 file:px-4
                     file:rounded-lg file:border-0
                     file:text-sm file:font-bold
                     file:bg-gray-100 dark:file:bg-gray-800
                     file:text-gray-800 dark:file:text-gray-200
                     hover:file:bg-gray-200 dark:hover:file:bg-gray-700
                     file:cursor-pointer file:transition-colors" %>

          <% if @artwork.image.attached? %>
            <div class="mt-4 w-full">
              <%= image_tag @artwork.image.variant(resize_to_limit: [300, 400]),
                  class: "mx-auto rounded-lg shadow-md max-h-60 object-cover" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Project Selection -->
      <div class="w-full">
        <%= f.label :project_id, "Project / Series", class: "text-base font-medium text-gray-800 dark:text-gray-200 pb-2 block" %>
        <%= f.select :project_id,
            options_from_collection_for_select(@projects, :id, :title, @artwork.project_id),
            { prompt: "Select a project" },
            class: "form-select w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800/50 text-gray-900 dark:text-white focus:border-primary focus:ring-primary h-12 px-4 text-base font-normal leading-normal" %>
      </div>

      <!-- Artwork Title -->
      <div class="w-full">
        <%= f.label :title, "Artwork Title", class: "text-base font-medium text-gray-800 dark:text-gray-200 pb-2 block" %>
        <%= f.text_field :title,
            placeholder: "Enter the title of your artwork",
            class: "form-input w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800/50 text-gray-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:border-primary focus:ring-primary h-12 px-4 text-base font-normal leading-normal" %>
      </div>

      <!-- Medium & Dimensions -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <%= f.label :medium, "Medium", class: "text-base font-medium text-gray-800 dark:text-gray-200 pb-2 block" %>
          <%= f.text_field :medium,
              placeholder: "e.g., Oil on canvas",
              class: "form-input w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800/50 text-gray-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:border-primary focus:ring-primary h-12 px-4 text-base font-normal leading-normal" %>
        </div>
        <div>
          <%= f.label :dimensions, "Dimensions", class: "text-base font-medium text-gray-800 dark:text-gray-200 pb-2 block" %>
          <%= f.text_field :dimensions,
              placeholder: 'e.g., 24" x 36"',
              class: "form-input w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800/50 text-gray-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:border-primary focus:ring-primary h-12 px-4 text-base font-normal leading-normal" %>
        </div>
      </div>

      <!-- Year & Position -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <%= f.label :year, "Year", class: "text-base font-medium text-gray-800 dark:text-gray-200 pb-2 block" %>
          <%= f.number_field :year,
              placeholder: Time.current.year,
              class: "form-input w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800/50 text-gray-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:border-primary focus:ring-primary h-12 px-4 text-base font-normal leading-normal" %>
        </div>
        <div>
          <%= f.label :position, "Display Position", class: "text-base font-medium text-gray-800 dark:text-gray-200 pb-2 block" %>
          <%= f.number_field :position,
              placeholder: "Order in gallery",
              class: "form-input w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800/50 text-gray-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:border-primary focus:ring-primary h-12 px-4 text-base font-normal leading-normal" %>
        </div>
      </div>

      <!-- Artist's Comments -->
      <div class="w-full">
        <%= f.label :description, "Artist's Comments", class: "text-base font-medium text-gray-800 dark:text-gray-200 pb-2 block" %>
        <%= f.text_area :description,
            placeholder: "Add a description or any notes about this piece...",
            rows: 6,
            class: "form-textarea w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800/50 text-gray-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:border-primary focus:ring-primary p-4 text-base font-normal leading-normal" %>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row-reverse gap-3 pt-4 border-t border-gray-200 dark:border-gray-800">
        <%= f.submit (@artwork.new_record? ? 'Upload Artwork' : 'Update Artwork'),
            class: "flex w-full sm:w-auto items-center justify-center rounded-lg h-11 px-6 bg-primary text-white text-base font-bold leading-normal tracking-wide shadow-sm hover:bg-primary/90 transition-colors cursor-pointer" %>
        <%= link_to "Cancel",
            admin_artworks_path,
            class: "flex w-full sm:w-auto items-center justify-center rounded-lg h-11 px-6 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 text-base font-bold leading-normal tracking-wide hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
