<div class="px-4 py-8">
  <!-- Header with New Button -->
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-black text-gray-900 dark:text-white">Projects</h1>
    <%= link_to new_admin_project_path, class: "flex items-center justify-center rounded-lg h-11 px-6 bg-primary text-white text-base font-bold hover:bg-primary/90 transition-colors" do %>
      <span class="material-symbols-outlined mr-2">add</span>
      New Project
    <% end %>
  </div>

  <!-- Projects List -->
  <% if @projects.any? %>
    <div class="space-y-4">
      <% @projects.each do |project| %>
        <div class="bg-white dark:bg-gray-900/50 rounded-lg border border-gray-200 dark:border-gray-800 p-6 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center gap-3 mb-2">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white"><%= project.title %></h3>
                <% if project.published? %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400">
                    Published
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400">
                    Draft
                  </span>
                <% end %>
              </div>

              <% if project.description.present? %>
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 line-clamp-2"><%= project.description %></p>
              <% end %>

              <p class="text-sm text-gray-500 dark:text-gray-500">
                <%= pluralize(project.artworks.count, 'artwork') %> Â· Position <%= project.position %>
              </p>
            </div>

            <!-- Actions -->
            <div class="flex gap-2 ml-4">
              <%= link_to edit_admin_project_path(project), class: "flex items-center justify-center rounded-lg h-9 px-4 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 text-sm font-medium hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors" do %>
                <span class="material-symbols-outlined text-sm mr-1">edit</span>
                Edit
              <% end %>
              <%= button_to admin_project_path(project), method: :delete, data: { confirm: "Delete this project and all its artworks?" }, class: "flex items-center justify-center rounded-lg h-9 px-4 bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400 text-sm font-medium hover:bg-red-200 dark:hover:bg-red-900/50 transition-colors" do %>
                <span class="material-symbols-outlined text-sm">delete</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <div class="rounded-full bg-gray-100 dark:bg-gray-800 w-16 h-16 flex items-center justify-center mx-auto mb-4">
        <span class="material-symbols-outlined text-gray-400 text-3xl">folder</span>
      </div>
      <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">No projects yet</h3>
      <p class="text-gray-600 dark:text-gray-400 mb-6">Organize your artworks by creating project collections.</p>
      <%= link_to new_admin_project_path, class: "inline-flex items-center justify-center rounded-lg h-11 px-6 bg-primary text-white text-base font-bold hover:bg-primary/90 transition-colors" do %>
        <span class="material-symbols-outlined mr-2">add</span>
        Create Your First Project
      <% end %>
    </div>
  <% end %>
</div>
