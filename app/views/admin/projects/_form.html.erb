<div class="relative flex min-h-screen w-full flex-col items-center justify-center p-4 sm:p-6 lg:p-8">
  <div class="w-full max-w-2xl">
    <!-- Page Heading -->
    <div class="mb-8 text-center">
      <h1 class="text-4xl font-black text-gray-900 dark:text-white leading-tight tracking-[-0.033em]">
        <%= @project.new_record? ? 'Create New Project' : 'Edit Project' %>
      </h1>
      <p class="mt-2 text-base text-gray-600 dark:text-gray-400">
        <%= @project.new_record? ? 'Create a new project or series to organize your artworks.' : 'Update the details of your project.' %>
      </p>
    </div>

    <!-- Form Container -->
    <%= form_with model: [:admin, @project], local: true, class: "rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900/50 shadow-sm p-6 sm:p-8 space-y-6" do |f| %>

      <!-- Cover Image Uploader -->
      <div class="flex flex-col">
        <div class="flex flex-col items-center gap-4 rounded-lg border-2 border-dashed border-gray-300 dark:border-gray-700 p-8 text-center">
          <div class="rounded-full bg-primary/10 p-3">
            <span class="material-symbols-outlined text-primary text-3xl">upload_file</span>
          </div>
          <div class="flex flex-col items-center gap-1">
            <p class="text-lg font-bold text-gray-900 dark:text-white">Cover Image</p>
            <p class="text-sm text-gray-600 dark:text-gray-400">Upload a cover image for this project</p>
            <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">PNG, JPG, GIF up to 10MB</p>
          </div>

          <%= f.file_field :cover_image,
              accept: "image/*",
              class: "mt-2 block w-full text-sm text-gray-900 dark:text-gray-200
                     file:mr-4 file:py-2 file:px-4
                     file:rounded-lg file:border-0
                     file:text-sm file:font-bold
                     file:bg-gray-100 dark:file:bg-gray-800
                     file:text-gray-800 dark:file:text-gray-200
                     hover:file:bg-gray-200 dark:hover:file:bg-gray-700
                     file:cursor-pointer file:transition-colors" %>

          <% if @project.cover_image.attached? %>
            <div class="mt-4 w-full">
              <%= image_tag @project.cover_image.variant(resize_to_limit: [400, 300]),
                  class: "mx-auto rounded-lg shadow-md max-h-60 object-cover" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Project Title -->
      <div class="w-full">
        <%= f.label :title, "Project Title", class: "text-base font-medium text-gray-800 dark:text-gray-200 pb-2 block" %>
        <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">Enter a project name. This will appear as a filter tab on the Works page.</p>
        <%= f.text_field :title,
            placeholder: "e.g., Food, Landscapes, Interiors",
            class: "form-input w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800/50 text-gray-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:border-primary focus:ring-primary h-12 px-4 text-base font-normal leading-normal" %>
      </div>

      <!-- Position & Published -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <%= f.label :position, "Display Position", class: "text-base font-medium text-gray-800 dark:text-gray-200 pb-2 block" %>
          <%= f.number_field :position,
              placeholder: "Order in gallery",
              class: "form-input w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800/50 text-gray-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:border-primary focus:ring-primary h-12 px-4 text-base font-normal leading-normal" %>
        </div>
        <div class="flex items-end pb-3">
          <label class="flex items-center gap-3 cursor-pointer">
            <%= f.check_box :published,
                class: "form-checkbox rounded border-gray-300 dark:border-gray-700 text-primary focus:ring-primary h-5 w-5" %>
            <span class="text-base font-medium text-gray-800 dark:text-gray-200">Published</span>
          </label>
        </div>
      </div>

      <!-- Project Description -->
      <div class="w-full">
        <%= f.label :description, "Project Description", class: "text-base font-medium text-gray-800 dark:text-gray-200 pb-2 block" %>
        <%= f.text_area :description,
            placeholder: "Describe this project or series...",
            rows: 6,
            class: "form-textarea w-full rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800/50 text-gray-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:border-primary focus:ring-primary p-4 text-base font-normal leading-normal" %>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row-reverse gap-3 pt-4 border-t border-gray-200 dark:border-gray-800">
        <%= f.submit (@project.new_record? ? 'Create Project' : 'Update Project'),
            class: "flex w-full sm:w-auto items-center justify-center rounded-lg h-11 px-6 bg-blue-600 text-white text-base font-bold leading-normal tracking-wide shadow-sm hover:bg-blue-700 transition-colors cursor-pointer" %>
        <%= link_to "Cancel",
            admin_projects_path,
            class: "flex w-full sm:w-auto items-center justify-center rounded-lg h-11 px-6 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 text-base font-bold leading-normal tracking-wide hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
