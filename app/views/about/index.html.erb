<% artist = @artist %>

<!-- Page Heading -->
<div class="flex flex-wrap justify-between gap-3 p-4">
  <h1 class="text-[#111318] dark:text-white text-4xl font-black leading-tight tracking-[-0.033em] min-w-72">About</h1>
</div>

<div class="px-4 py-8">
  <div class="flex flex-col gap-8">
    <!-- Artist Image (if available) -->
    <% if artist.profile_image.attached? %>
      <div class="w-full max-w-md mx-auto">
        <%= image_tag artist.profile_image.variant(resize_to_limit: [600, 600]),
            alt: artist.name,
            class: "w-full h-auto rounded-xl" %>
      </div>
    <% end %>

    <!-- Artist Name -->
    <div class="text-center">
      <h2 class="text-[#111318] dark:text-white text-3xl font-bold leading-tight mb-2"><%= artist.name %></h2>
    </div>

    <!-- Artist Bio -->
    <div class="prose dark:prose-invert max-w-none">
      <p class="text-[#111318] dark:text-gray-300 text-base leading-relaxed whitespace-pre-wrap"><%= artist.bio %></p>
    </div>
  </div>
</div>
