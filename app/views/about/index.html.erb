<% artist = @artist %>

<div class="w-full mx-auto py-12 md:py-20 px-4 sm:px-10">
  <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 lg:gap-16">
    <!-- Left Column: Image + Social -->
    <div class="lg:col-span-2 flex flex-col items-center lg:items-start">
      <!-- Artist Portrait -->
      <div class="w-full max-w-sm lg:max-w-none">
        <div class="w-full overflow-hidden bg-white aspect-[3/4] rounded-lg shadow-lg">
          <% if artist.profile_image.attached? %>
            <%= image_tag artist.profile_image.variant(resize_to_fill: [600, 800]),
                alt: artist.name,
                class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full bg-gray-200 dark:bg-gray-800"></div>
          <% end %>
        </div>
      </div>

      <!-- Social Media Links -->
      <div class="mt-8 w-full max-w-sm lg:max-w-none">
        <h3 class="text-gray-900 dark:text-white text-lg font-bold tracking-tight mb-4">Connect</h3>
        <div class="flex items-center space-x-4">
          <!-- Instagram -->
          <a class="text-gray-500 dark:text-gray-400 hover:text-primary dark:hover:text-primary" href="#" aria-label="Instagram">
            <svg aria-hidden="true" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path clip-rule="evenodd" d="M12.315 2c-4.013 0-4.484.017-6.052.088-1.57.07-2.64.342-3.568 1.267C1.767 4.28.5 5.35.429 6.92c-.07 1.568-.087 2.04-.087 6.052s.017 4.484.088 6.052c.07 1.57.342 2.64 1.267 3.568.927.927 2 .2 3.568.27 1.568.07 2.04.087 6.052.087s4.484-.017 6.052-.088c1.57-.07 2.64-.342 3.568-1.267.927-.927 1.2-2 1.27-3.568.07-1.568.087-2.04.087-6.052s-.017-4.484-.088-6.052c-.07-1.57-.342-2.64-1.267-3.568C21.033.5 19.962.228 18.394.158 16.826.087 16.328 0 12.315 0h-4.63zm-1.04 1.802h3.585c3.84 0 4.258.015 5.75.084 1.448.067 2.21.345 2.812.947.604.604.88 1.364.947 2.812.07 1.492.084 1.91.084 5.75s-.015 4.258-.084 5.75c-.067 1.448-.345 2.21-.947 2.812-.604.604-1.364.88-2.812.947-1.492.07-1.91.084-5.75.084s-4.258-.015-5.75-.084c-1.448-.067-2.21-.345-2.812-.947-.604-.604-.88-1.364-.947-2.812-.07-1.492-.084-1.91-.084-5.75s.015-4.258.084-5.75c.067-1.448.345-2.21.947-2.812.604-.604 1.364-.88 2.812-.947 1.492-.07 1.91-.084 5.75-.084zM12 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.88 1.44 1.44 0 000-2.88z" fill-rule="evenodd"></path>
            </svg>
          </a>
          <!-- Twitter/X -->
          <a class="text-gray-500 dark:text-gray-400 hover:text-primary dark:hover:text-primary" href="#" aria-label="Twitter">
            <svg aria-hidden="true" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.71v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Right Column: Bio + Press/CV -->
    <div class="lg:col-span-3">
      <h1 class="text-gray-900 dark:text-white tracking-tight text-4xl md:text-5xl font-bold leading-tight text-left pb-4">About the Artist</h1>

      <!-- Bio Text -->
      <div class="space-y-6 text-gray-700 dark:text-gray-300 text-base font-normal leading-relaxed">
        <%= simple_format(artist.bio, class: "mb-4 last:mb-0") %>
      </div>

      <!-- Press / CV Section -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
        <h3 class="text-gray-900 dark:text-white text-lg font-bold tracking-tight mb-4">Press / CV</h3>
        <ul class="space-y-3">
          <li><a class="text-primary hover:underline font-medium" href="#">Featured Press Article</a></li>
          <li><a class="text-primary hover:underline font-medium" href="#">Contemporary Art Review</a></li>
          <li><a class="text-primary hover:underline font-medium" href="#">Studio Visit Interview</a></li>
          <li><a class="text-primary hover:underline font-medium" href="#">Download Full CV (PDF)</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
