<div class="container mx-auto px-4 py-16 sm:py-24">
  <div class="flex flex-col lg:flex-row gap-16 lg:gap-24 items-start">
    <!-- Left Column: Form -->
    <div class="w-full lg:w-1/2 flex-shrink-0">
      <div class="max-w-xl mx-auto lg:mx-0">
        <div class="flex flex-col gap-4 mb-10">
          <h1 class="text-gray-900 dark:text-white text-4xl md:text-5xl font-black leading-tight tracking-[-0.033em]">Get in Touch</h1>
          <p class="text-gray-600 dark:text-gray-400 text-base md:text-lg font-normal leading-relaxed">
            I welcome inquiries about commissions, collaborations, or purchasing available works. Please fill out the form below, and I will get back to you as soon as possible, typically within 2-3 business days.
          </p>
        </div>

        <%= form_with model: @contact_inquiry, url: contacts_path, local: true, class: "space-y-6" do |f| %>
          <!-- Name & Email Row -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="flex flex-col flex-1">
              <%= f.label :name, "Your Name", class: "text-gray-900 dark:text-white text-base font-medium leading-normal pb-2" %>
              <%= f.text_field :name,
                  placeholder: "Enter your full name",
                  class: "form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-gray-900 dark:text-white focus:outline-0 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 focus:ring-2 focus:ring-primary h-12 placeholder:text-gray-500 dark:placeholder:text-gray-500 px-4 text-base font-normal leading-normal transition-all" %>
            </div>

            <div class="flex flex-col flex-1">
              <%= f.label :email, "Your Email", class: "text-gray-900 dark:text-white text-base font-medium leading-normal pb-2" %>
              <%= f.email_field :email,
                  placeholder: "you@example.com",
                  class: "form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-gray-900 dark:text-white focus:outline-0 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 focus:ring-2 focus:ring-primary h-12 placeholder:text-gray-500 dark:placeholder:text-gray-500 px-4 text-base font-normal leading-normal transition-all" %>
            </div>
          </div>

          <!-- Message -->
          <div class="flex flex-col min-w-40 flex-1">
            <%= f.label :message, "Your Message", class: "text-gray-900 dark:text-white text-base font-medium leading-normal pb-2" %>
            <%= f.text_area :message,
                placeholder: "Type your message here...",
                rows: 6,
                class: "form-textarea flex w-full min-w-0 flex-1 resize-y overflow-hidden rounded-lg text-gray-900 dark:text-white focus:outline-0 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 focus:ring-2 focus:ring-primary min-h-36 placeholder:text-gray-500 dark:placeholder:text-gray-500 p-4 text-base font-normal leading-normal transition-all" %>
          </div>

          <!-- Submit Button -->
          <%= f.submit "Send Message",
              class: "flex w-full sm:w-auto min-w-[120px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 px-6 bg-primary text-white text-base font-bold leading-normal tracking-[0.015em] hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all" %>
        <% end %>
      </div>
    </div>

    <!-- Right Column: Featured Artwork -->
    <div class="w-full lg:w-1/2 mt-8 lg:mt-0">
      <div class="sticky top-28">
        <div class="aspect-square w-full rounded-xl overflow-hidden bg-gray-200 dark:bg-gray-800">
          <% if @featured_artwork&.image&.attached? %>
            <%= image_tag @featured_artwork.image.variant(resize_to_fill: [800, 800]),
                alt: @featured_artwork.title,
                class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center">
              <span class="material-symbols-outlined text-gray-400 text-6xl">image</span>
            </div>
          <% end %>
        </div>
        <% if @featured_artwork %>
          <div class="mt-4 text-center">
            <p class="text-gray-600 dark:text-gray-400 text-sm italic">
              "<%= @featured_artwork.title %>"<%= ", #{@featured_artwork.year}" if @featured_artwork.year %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
